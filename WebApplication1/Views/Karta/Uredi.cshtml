
@{
    ViewData["Title"] = "Uredi";
}
@model WebApplication1.Models.Karta.KartaUrediVM
<h1>Uredi</h1>
<form method="post" enctype="multipart/form-data" asp-action="Snimi" asp-controller="Karta">
    <input hidden readonly asp-for="KartaID" /><br />
    <div class="form-group">
        <label asp-for="Datum" class="control-label"></label>
        <input readonly asp-for="Datum" /><br />
    </div>
    <div class="form-group">
        <label asp-for="VaziOd" class="control-label"></label>
        <input asp-for="VaziOd" /><br />
    </div>
    <div class="form-group">
        <label asp-for="VaziDo" class="control-label"></label>
        <input asp-for="VaziDo" /><br />
    </div>
    <div class="form-group">
        <label asp-for="Sjediste" class="control-label"></label>
        <input asp-for="Sjediste" /><br />
    </div>
    <div class="form-group">
        <label asp-for="BrojPutnika" class="control-label"></label>
        <input asp-for="BrojPutnika" /><br />
    </div>
    <div>
        <label asp-for="TipKarte" class="control-label"></label>
        <select asp-for="TipKarteID" asp-items="Model.TipKarte"></select>
    </div>
    <div>
        <label asp-for="VrstaPopusta" class="control-label"></label>
        <select asp-for="VrstaPopustaID" asp-items="Model.VrstaPopusta"></select>
    </div>
    <div class="form-group">
        <label asp-for="IsRezervisana" class="control-label"></label>
        <input type="checkbox" asp-for="IsRezervisana" /><br />
    </div>
    <a class="btn btn-primary" href="/Karta/Prikaz">Odustani</a>
    <a class="btn btn-danger" href="/Karta/Plati">Plati</a>
    <input type="submit" value="Snimi" />
</form>
<form>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <div class="form-group">
                    <label asp-for="Datum" class="control-label"></label>
                    <input readonly asp-for="Datum" /><br />
                </div>
                <div class="form-group">
                    <label asp-for="BrojPutnika" class="control-label"></label>
                    <input asp-for="BrojPutnika" /><br />
                </div>
                <div>
                    <label asp-for="TipKarte" class="control-label"></label>
                    <select asp-for="TipKarteID" asp-items="Model.TipKarte"></select>
                </div>
            </div>

            <div class="item">
                <div class="form-group">
                    <label asp-for="VaziDo" class="control-label"></label>
                    <input asp-for="VaziDo" /><br />
                </div>
                <div class="form-group">
                    <label asp-for="Sjediste" class="control-label"></label>
                    <input asp-for="Sjediste" /><br />
                </div>
                <a class="btn btn-danger" href="/Karta/Plati">Plati</a>
            </div>

            <div class="item">

            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</form>